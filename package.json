{
  "name": "@vue-interface/btn-group",
  "version": "2.0.0-beta.6",
  "description": "A Vue button group component.",
  "files": [
    "dist",
    "tailwindcss"
  ],
  "type": "module",
  "main": "./dist/btn-group.umd.js",
  "module": "./dist/btn-group.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/btn-group.js",
      "require": "./dist/btn-group.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./tailwindcss": "./tailwindcss/index.cjs",
    "./tailwindcss/safelist": "./tailwindcss/safelist.cjs"
  },
  "browserslist": "last 2 versions, > 0.5%, ie >= 11",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "pre-release": "npm run build; git add . -A; git commit -m 'pre-release commit'",
    "release-patch": "npm run pre-release && npm version patch -m \"%s\" && npm run release;",
    "release-minor": "npm run pre-release && npm version minor -m \"%s\" && npm run release;",
    "release-major": "npm run pre-release && npm version major -m \"%s\" && npm run release;",
    "release": "git add . -A; git commit; git push --tags origin; npm publish;"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vue-interface/btn-group.git"
  },
  "keywords": [
    "Form",
    "Control",
    "Vue",
    "Component",
    "Tailwind",
    "Bootstrap"
  ],
  "author": "Justin Kimbrell",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vue-interface/btn/issues"
  },
  "homepage": "https://github.com/vue-interface/btn",
  "dependencies": {
    "@vue-interface/btn": "^3.0.0-beta.0",
    "@vue-interface/sizeable": "^2.0.0-beta.8",
    "@vue-interface/variant": "^2.0.0-beta.0"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "autoprefixer": "^10.4.2",
    "change-case": "^4.1.2",
    "eslint": "^8.25.0",
    "eslint-plugin-vue": "^9.6.0",
    "pascalcase": "^2.0.0",
    "postcss": "^8.4.6",
    "tailwindcss": "^3.1.0",
    "ts-vue": "^0.1.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^1.7.1",
    "vue": "^3.2.41"
  }
}
